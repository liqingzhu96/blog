doctype html
html
	head
		title 首页
		meta(charset="UTF-8")
		link(rel="stylesheet" type="text/css" href="css/style.css")
		link(rel="stylesheet" type="text/css" href="css/font.css")
		script(type="text/javascript" src="js/jquery.js")
		script(type="text/javascript" src="js/animate.js")
	body
		.Bcontent
			.header
			.content
				.left
					.gongneng
						.gongneng_box.color1
							.box1
								i.i1
								i.i5.icon-bowen
						.gongneng_box.color2
							.box2
								i.i2
								i.i6.icon-xinqing
						.gongneng_box.color3
							.box3
								i.i3
								i.i5.icon-shangweikaifang
						.gongneng_box.color4
							.box4
								i.i4
								i.i6.icon-shangweikaifang
					.wenzhang
						-for(var a=0;a<6;a++){
						.wenzhang_box
							.wenzhang_box_in
								.wenzhang_type
									a.a_box(href="#")
								.wenzhang_content
									a.a_box(href="/blog?_id=#{data[a]['_id']}")
										.wenzhang_time 
											span #{data[a]['time']}
										.wenzhang_title #{data[a]['title']}
						-}
				.right
					.content
						.content_top
							h1.p_top 博文全览
						.content_bottom
							-for (var i=0;i<data.length;i++){
							.p_title
								a(href="#")
									i.p_type #{data[i]['type']}
								.p_text
									a(href="/blog?_id=#{data[i]['_id']}") #{data[i]['title']}
								i.p_time #{data[i]['time']}
							-}

								

